        </div>
        <section class="min-h-[500px] flex items-center justify-center">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 lg:gap-4 md:gap-2 gap-1 w-full">
                <img src="{{ asset('images/image-background/napoelon-bague-backgrounf.jpg') }}" alt="Image de chevalières" class="w-full h-[300px] object-cover">
                <img src="{{ asset('images/image-background/bouton vetement v3 new co.jpg') }}" alt="Image de vêtements" class="w-full h-[300px] object-cover">
                <img src="{{ asset('images/image-background/Collier v2.jpg') }}" alt="Image de colliers" class="w-full h-[300px] object-cover">
                <img src="{{ asset('images/image-background/bracelet-accueil.jpg') }}" alt="Image de bracelets" class="w-full h-[300px] object-cover">
            </div>
        </section>
