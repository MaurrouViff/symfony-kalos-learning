{% block body %}
{% include ('partials/header.html.twig') %}
    <div class="grow">
        <section class="flex items-center justify-center min-h-[450px] bg-cover bg-center" style="background-image: url('{{ asset('images/image-background/kalos-bannière.jpg') }}')"></section>
        <section class="min-h-[100px] flex justify-center mt-3.5">
            <div class="flex flex-col items-center">
                <div class="gothic-font bg-clip-text lg:tracking-widest sm:tracking-wider tracking-wide bg-black font-extrabold text-transparent lg:text-5xl sm:text-3xl text-xl">
                    Atelier Français
                </div>
                <div class="gothic-font bg-clip-text lg:tracking-widest sm:tracking-wider tracking-wide bg-black font-extrabold text-transparent lg:text-5xl sm:text-3xl text-xl">
                    Qualité · Beauté · Valeurs
                </div>
            </div>
        </section>
        <section class="min-h-[450px] flex items-center justify-center bg-cover bg-center lg:m-16 md:m-8 m-0 mb-6" style="background-image: url('{{ asset('images/image-background/Kalos-joaillerie2.jpg') }}')"></section>
