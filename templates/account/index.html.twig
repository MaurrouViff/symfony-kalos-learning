{% extends 'base.html.twig' %}

{% block title %}Mon Compte - KALOS{% endblock %}

{% block body %}
{% include ('partials/header.html.twig') %}
    <div class="grow">
        <section class="flex items-center justify-center min-h-[300px] flex-col">
            <table class="w-44 border border-black text-black">
                <thead>
                <tr class="bg-black/80 text-white">
                    <th colspan="2" class="px-4 py-2 border border-white">Vos informations</th>
                </tr>
                </thead>
                <tbody>
                <tr class="bg-gray-100">
                    <td class="px-4 py-2 border border-black">Votre nom</td>
                    <td class="px-4 py-2 border border-black">{{ app.user.nom }}</td>
                </tr>
                <tr class="bg-gray-100">
                    <td class="px-4 py-2 border border-black">Votre prénom</td>
                    <td class="px-4 py-2 border border-black">{{ app.user.prenom }}</td>
                </tr>
                <tr class="bg-gray-100">
                    <td class="px-4 py-2 border border-black">Votre email</td>
                    <td class="px-4 py-2 border border-black">{{ app.user.userIdentifier }}</td>
                </tr>
                </tbody>
            </table>
        </section>
        <hr class="bg-cyan-300 h-1.5 border-0">
        <section class="flex items-center justify-center min-h-[100px] flex-col">
            <h2 class="font-semibold lg:text-xl md:text-lg text-base">Options :</h2>
            <div class="grid lg:grid-cols-3 grid-cols-1 lg:gap-4 gap-2">
                <a href="{{ path('app_update_password') }}" class="text-center lg:px-4 lg:py-2 md:px-3 md:py-1.5 px-2.5 py-1 rounded-md bg-white outline-2 outline-offset-0 outline-black hover:bg-black hover:text-white ease-in-out duration-300">
                    Mot de passe
                </a>
                <a href="{{ path('app_panier') }}" class="text-center lg:px-4 lg:py-2 md:px-3 md:py-1.5 px-2.5 py-1 rounded-md bg-white outline-2 outline-offset-0 outline-black hover:bg-black hover:text-white ease-in-out duration-300">
                    Panier
                </a>
                <a href="{{ path('app_photo_changer') }}" class="text-center lg:px-4 lg:py-2 md:px-3 md:py-1.5 px-2.5 py-1 rounded-md bg-white outline-2 outline-offset-0 outline-black hover:bg-black hover:text-white ease-in-out duration-300">
                    Photo
                </a>
            </div>
        </section>
        <section class="flex items-center flex-col lg:space-y-3 md:space-y-2 space-y-1 justify-center min-h-[100px]">
            <a href="{{ path('app_logout') }}" class="rounded text-red-500 lg:py-2 lg:px-4 md:py-1.5 md:px-3 px-2.5 py-1 bg-white outline-2 outline-offset-0 outline-red-500">
                Se déconnecter
            </a>
            <a href="{{ path('app_admin') }}" class="rounded text-emerald-500 lg:py-2 lg:px-4 md:py-1.5 md:px-3 px-2.5 py-1 bg-white outline-2 outline-offset-0 outline-emerald-500">
                Panel Admin
            </a>
        </section>
    </div>
{% include ('partials/footer.html.twig') %}
{% endblock %}
